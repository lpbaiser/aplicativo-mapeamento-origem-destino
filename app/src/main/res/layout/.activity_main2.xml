<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#90beeb"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    style="@style/Base.Theme.AppCompat.Light.DialogWhenLarge"
    android:longClickable="false">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/buttonCheckIn"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:text="Como Chegar?"
        android:onClick="startCheckIn2"
        android:layout_gravity="center_horizontal"
        android:background="#7595f8"
        android:layout_alignTop="@+id/buttonLinhas"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/buttonLinhas"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="Linhas"
        android:onClick="todaslinhas"
        android:layout_gravity="center_horizontal"
        android:background="#7595f8"
        android:layout_alignParentTop="true"
        android:layout_marginTop="161dp"
        android:layout_alignLeft="@+id/buttonCheckOut"
        android:layout_alignStart="@+id/buttonCheckOut"
        android:longClickable="true" />

    <Button
        android:id="@+id/buttonHorario"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="Lista de HorÃ¡rios"
        android:onClick="startHorario"
        android:layout_gravity="center_horizontal"
        android:background="#7595f8"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonOnibus"
        android:layout_width="168dp"
        android:layout_height="wrap_content"
        android:text="Onibus"
        android:onClick="todosOnibus"
        android:layout_gravity="center_horizontal"
        android:background="#7595f8"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonCheckOut"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:text="Sair"
        android:onClick="startCheckOut"
        android:layout_gravity="center_horizontal"
        android:background="#7595f8"
        android:allowUndo="false"
        android:backgroundTint="#d0def3"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <Button
        android:id="@+id/buttonLinhasNovo"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:text="Linhas Novo"
        android:onClick="linhasNovo"
        android:layout_gravity="center_horizontal"
        android:background="#7595f8"
        android:layout_alignTop="@+id/buttonLinhasNovo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:id="@+id/socket"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:text="Socket Teste"
        android:onClick="socketTeste"
        android:layout_gravity="center_horizontal"
        android:background="#7595f8"
        android:layout_alignTop="@+id/buttonLinhasNovo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--<com.facebook.login.widget.LoginButton-->
        <!--android:id="@+id/login_button"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
   <!--/>-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonOnibus"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:text="Locais"
            android:onClick="todosOnibus"
            android:layout_gravity="center_horizontal"
            android:background="#7595f8"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>



</RelativeLayout>